{
  "type": "form",
  "key": "create-thing",
  "title": "Create Recipient",
  "description": "Please enter all the information",
  "schemas": [
    {
      "id": "#gbp-recipient",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "title": "Recipient Name",
          "minLength": 2
        },
        "accountNumber": {
          "title": "Account number",
          "type": "string",
          "minLength": 6,
          "maxLength": 10
        },
        "sortCode": {
          "title": "Sort code",
          "type": "string",
          "minLength": 6,
          "maxLength": 7
        }
      },
      "required": ["name", "accountNumber", "sortCode"]
    }
  ],
  "model": {
    "name": "default"
  },
  "actions": [
    {
      "type": "primary",
      "url": "/confirm",
      "label": "Submit",
      "method": "POST"
    },
    {
      "type": "warning",
      "url": "/final",
      "label": "Skip",
      "method": "GET"
    },
    {
      "type": "failure",
      "url": "/error",
      "label": "Fail submission",
      "method": "POST"
    }
  ]
}
